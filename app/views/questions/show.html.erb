<h1><%=@question.title%></h1>
<p><%=@question.content%></p>
<% if current_user && @question.user_id == current_user.id %>
  <%= link_to "Edit", edit_question_path(@question)%>
<%end%>

 <%=form_for :comment, html: {class: "commentform", id: "#{@question.id}"} do |f|%>
    <%=f.hidden_field :parent_type, value: "question" %>
    <%=f.label :content%>
    <%=f.text_area :content%>
    <%=f.submit "Post Comment"%>
  <%end%>
<%if current_user%>
<button class= 'addComment'>Add Comment</button>
<%end%>


<% @comments.each do|comment| %>
  <%=comment.content%> <strong><%=comment.user.username%></strong>
  <%=comment.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%Y %I:%M%p")%>

<%end%>


<h2>Answers</h2>

  <%=form_for :answer, html: {class: "answerform", id: "#{@question.id}"} do |f|%>
    <%=f.label :content%>
    <%=f.text_area :content%>
    <%=f.submit "Post Answer"%>
  <%end%>
<%if current_user%>
<button class= 'addAnswer'>Add Answer</button>
<%end%>
<ul class="answers">
<% @answers.each do |answer| %>
 <%=render answer, answer: answer, layout: false%>
<%end%>
</ul>


<% if flash[:notice]%>
  <div class="notice"><%=flash[:notice]%></div>
<%end%>
